{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "ghost",
  "version": "0.1.0",
  "identifier": "com.ghost.app",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Ghost",
        "width": 680,
        "height": 520,
        "resizable": true,
        "decorations": false,
        "transparent": true,
        "center": true,
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "visible": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "category": "Utility",
    "shortDescription": "Private Local AI Superpowers for Your OS",
    "longDescription": "Ghost is a private, local-first AI assistant that indexes your files, provides hybrid semantic + keyword search, and runs entirely on your machine. Zero telemetry, zero cloud dependencies.",
    "copyright": "Copyright Â© 2026 Ghost Contributors",
    "license": "MIT",
    "licenseFile": "../LICENSE",
    "windows": {
      "nsis": {
        "displayLanguageSelector": true,
        "installMode": "currentUser"
      }
    },
    "linux": {
      "deb": {
        "depends": ["libwebkit2gtk-4.1-0", "libgtk-3-0"],
        "section": "utils"
      },
      "appimage": {
        "bundleMediaFramework": false
      }
    }
  }
}
